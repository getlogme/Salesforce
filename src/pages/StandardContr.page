<apex:page standardController="Student_Details__c">
  <apex:form >
    <apex:pageBlock title="My Content" mode="edit">
      <apex:pageBlockButtons >
        <apex:commandButton action="{!save}" value="Save"/>
      </apex:pageBlockButtons>
      <apex:pageBlockSection title="My Content Section" columns="2">
        <apex:inputField value="{!Student_Details__c.name}"/>
        <apex:inputField value="{!Student_Details__c.Student_Name__c}"/>
        <apex:inputField value="{!Student_Details__c.Course_Name__c}"/>
      
      </apex:pageBlockSection>
    </apex:pageBlock>
    <apex:commandButton action="{!save}" value="Save"/>
  </apex:form>
</apex:page>